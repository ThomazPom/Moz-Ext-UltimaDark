{
  "manifest_version": 3,
  "name": "UltimaDark",
  "version": "1.6.14",
  "description": "The extension uses agressive techniques to get a dark mode everywhere on internet\nThis is still highly experimental so it can also ruin your internet experience",
  "homepage_url": "https://github.com/ThomazPom/Moz-Ext-UltimaDark",
  "icons": {
    "48": "icons/48.png",
    "96": "icons/2x.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["ultimaDark.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy":{
    "extension_pages":  "script-src 'self' ; "
  },
  "host_permissions": [
    "<all_urls>"
  ],
  
  "commands": {
    "toggle-site": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Ctrl+Shift+U"
      },
      "description": "Toggles UltimaDark on the current site"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "79.0"
    },
    "gecko_android ": {
      "strict_min_version": "42.0"
    }
    
  },  
  "permissions": [
    "scripting","tabs","browsingData","webNavigation", "webRequest", "webRequestBlocking","storage","unlimitedStorage","tabHide","webRequestFilterResponse"
  ]
  ,
  
  "action": {
    "default_icon": "icons/38.png",
    "default_title": "UltimaDark is active",
    
    "default_popup": "popup/popup.html?mode=uDark-popup"
  },
  "background": {
    "scripts": ["fakeContentScriptClass.js","backgroundClass.js","Listeners.js","background.js","uDarkEncoder.js"]
  }
  
  
}
